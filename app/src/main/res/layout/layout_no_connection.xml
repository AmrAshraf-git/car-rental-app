<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/list_item">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <ImageView
        android:id="@+id/noConnection_imgView_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:tint="@color/light_blue"
        android:src="@drawable/ic_baseline_no_internet_4_bar"/>

    <TextView
        android:id="@+id/noConnection_txtView_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:text="Please check your internet connection and try again">

    </TextView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/noConnection_btn_reload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="70dp"
        android:layout_marginStart="70dp"
        android:layout_marginBottom="40dp"
        android:textSize="16sp"

        android:text="Try again"
        android:background="@drawable/ic_btn_rounded"
        android:clickable="true"
        android:focusable="true"
        app:elevation="4dp"
        android:textAllCaps="false">
    </androidx.appcompat.widget.AppCompatButton>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>